{% extends "layout.html.twig" %}
{% block title %} Palmarès {% endblock %}

{% block titre3 %} Palmarès {% endblock %}

{% block navigation %}
	{{ include ("secretariat/navigation.html.twig") }}
{% endblock %}

{% block body %}
{# <div class="well"> #}
  <h2>
  	<a 
href="{{ path('secretariat_lesprix') }}" >
  	Les {{ NbrePremierPrix}} premiers prix</a>
  </h2>
  <table class="table table-striped">
    <thead>
      <tr class="danger">
        <th>Équipe</th>
        <th>Titre du projet</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      {% for premier in ListPremPrix %}
